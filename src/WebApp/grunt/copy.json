{
    "build": {
        "files": [
            {
                "src": "*.html",
                "dest": "wwwroot/"
            },
            {
                "expand": true,
                "cwd": "ng-apps/",
                "src": [
                    "**/*.{js,css,map,html,htm,ico,jpg,jpeg,png,gif,eot,svg,ttf,woff}"
                ],
                "dest": "wwwroot/ng-apps",
                "options": { "force": true }
            },
            {
                "expand": true,
                "cwd": "wwwroot/lib/bootstrap/",
                "src": [
                    "glyphicons*.{woff,woff2,eot,ttf,svg}"
                ],
                "dest": "wwwroot/fonts",
                "options": { "force": true }
            },
            {
                "expand": true,
                "cwd": "bower_components/lightbox/css",
                "src": [
                    "*.css"
                ],
                "dest": "wwwroot/css",
                "options": { "force": true }
            },
            {
                "expand": true,
                "cwd": "bower_components/lightbox/img",
                "src": [
                    "*.{gif,png}"
                ],
                "dest": "wwwroot/img",
                "options": { "force": true }
            }
        ]
    }
}